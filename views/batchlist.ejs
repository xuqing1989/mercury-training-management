<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>Batch List<small>Add, edit and remove batch</small></h1>
    <ol class="breadcrumb">
        <li><i class="fa fa-dashboard"></i> Batch
        </li>
        <li class="active">Batch List</li>
    </ol>
</section>

<!-- Main content -->
<section class="content" ng-controller="batchlistCtrl">
<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
          <h3 class="box-title">Batch List</h3>
          <button class="btn btn-sm btn-default" ng-click="newModal()"><i class="fa fa-plus"></i></button>
      </div><!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
          <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Begin date</th>
            <th>Teacher</th>
            <th>Students</th>
            <th>Operations</th>
          </tr>
          <% for(var key in batchList) { %>
          <tr>
              <td><%= batchList[key].name %></td>
              <td><%= batchList[key].type %></td>
              <td><%= batchList[key].beginDate.toDateString() %></td>
              <td><%= batchList[key].teacher.name %></td>
              <td><%= batchList[key].students?batchList[key].students.length:0 %></td>
              <td>
                  <button class="btn btn-sm btn-default" ng-click=""><i class="fa fa-edit"></i></button>
                  <% if(!batchList[key].students) { %>
                  <button class="btn btn-sm btn-danger" ng-click=""><i class="fa fa-remove"></i></button>
                  <% } %>
              </td>
          </tr>
          <% } %>
        </table>
      </div><!-- /.box-body -->
    </div><!-- /.box -->
  </div>
</div>
</section>
<!-- /.content -->
